﻿@model Template.Web.Areas.CapoSettore.Users.IndexViewModel
@{
    ViewData["Title"] = ((Template.Web.Areas.IdentitaViewModel)ViewData[Template.Web.Areas.IdentitaViewModel.VIEWDATA_IDENTITACORRENTE_KEY]).NomeCognome;
}
@section pageTitle {
    <nav class="navbar navbar-expand navbar-light flex-wrap onit-page-title">   
        <h1>Ciao Ago</h1>
        <a class="navbar-brand">
            @ViewData["Title"]
        </a>
    </nav>
}

<div class="table-container">
    <div class="table-scroll">
        <table class="table">
            <thead>
                <tr>
                    <th style="width: 200px;">Dipendenti</th>
                    @foreach (var day in Model.CalendarData.SelectMany(week => week))
                    {
                        <th class="@day.CssClass">
                            <span>@day.Day</span>
                            <br />
                            <span>@day.Status</span>
                        </th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Users)
                {
                    <tr>
                        <td>@user.FirstName @user.LastName</td>
                        @foreach (var day in Model.CalendarData.SelectMany(week => week))
                        {
                            <td class="@day.CssClass">
                                <!-- Puoi inserire ulteriori informazioni specifiche per ogni cella qui -->
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

